<!--INDEX - Ovo je prva stranica koja će se pojaviti korisniku. na ovoj stranici, korisnik se može registrovati a i prijaviti se nakon
registracije.-->


@model projekat.Models.login
@{
    ViewBag.Title = "Prijavljivanje";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Styles/IndexPocetna.css")

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h2 style="color:white">Škola stranih jezika</h2>
            </div>
            <div class="card-header">
                <h3>Prijavljivanje</h3>
            </div>
            <div class="card-body">
                <!--Unos podataka i podstenik ako se nesto nije unelo.-->

                @using (Html.BeginForm("Authorize", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group form-group">

                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>


                        @Html.EditorFor(model => model.username)
                        <div class="text-danger hideAfter">
                            @Html.ValidationMessageFor(model => model.username)
                        </div>
                    </div>

                    <div class="input-group form-group align col-s-5">

                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>

                        @Html.EditorFor(model => model.password)
                        <div class="text-danger hideAfter">
                            @Html.ValidationMessageFor(model => model.password)
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Prijavi se" class="btn float-right login_btn">
                    </div>

                    <div class="text-warning hideAfter">
                        @Html.DisplayFor(model=>model.LoginErrorMessage)
                    </div>
                }
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Nemate nalog?@Html.ActionLink("Napravite nalog", "Prijavljivanje")
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    setTimeout(function () { $('.hideAfter').hide(); }, 4000);
</script>
